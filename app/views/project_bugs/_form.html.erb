<%= form_with(model: project_bug) do |form| %>
  <%= hidden_field_tag :project_id, params[:project_id]%>
  <% if project_bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project_bug.errors.count, "error") %> prohibited this project_bug from being saved:</h2>
