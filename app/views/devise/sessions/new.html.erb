<div style="background-color: lightblue" class="container m-5 p-5 justify-content-center" id="signUp">
  <div class="signup-form">
    <div class="col-xs-8 col-xs-offset-4">
      <h2>Log in</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"shadow p-3 mb-3 bg-info rounded") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :email, class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <%= f.email_field :email, class:"form-control", required:"required", placeholder:"Enter email",autofocus: true, autocomplete: "email"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class:"control-label col-xs-4" %>
        <div class="col-xs-8">
          <%= f.password_field :password, class:"form-control", required:"required",autocomplete: "current-password", placeholder:"Enter password"%>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.submit "Log in" , class: "btn btn-success"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<%#= render "devise/shared/links" %>
